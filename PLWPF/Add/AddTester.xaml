            <CheckBox x:Name="checkBox10"  Grid.Column="2" Grid.Row="3" Width=" auto"/>
            <CheckBox x:Name="checkBox11"  Grid.Column="2" Grid.Row="4" Width=" auto"/>
            <CheckBox x:Name="checkBox12"  Grid.Column="2" Grid.Row="5" Width=" auto"/>
            <CheckBox x:Name="checkBox13"  Grid.Column="2" Grid.Row="6" Width=" auto"/>
            <CheckBox x:Name="checkBox14"  Grid.Column="2" Grid.Row="7" Width=" auto"/>

            <CheckBox x:Name="checkBox15"  Grid.Column="3" Grid.Row="1" Width=" auto"/>
            <CheckBox x:Name="checkBox16"  Grid.Column="3" Grid.Row="2" Width=" auto"/>
            <CheckBox x:Name="checkBox17"  Grid.Column="3" Grid.Row="3" Width=" auto"/>
            <CheckBox x:Name="checkBox18"  Grid.Column="3" Grid.Row="4" Width=" auto"/>
            <CheckBox x:Name="checkBox19"  Grid.Column="3" Grid.Row="5" Width=" auto"/>
            <CheckBox x:Name="checkBox20"  Grid.Column="3" Grid.Row="6" Width=" auto"/>
            <CheckBox x:Name="checkBox21"  Grid.Column="3" Grid.Row="7" Width=" auto"/>

            <CheckBox x:Name="checkBox22"  Grid.Column="4" Grid.Row="1" Width=" auto"/>
            <CheckBox x:Name="checkBox23"  Grid.Column="4" Grid.Row="2" Width=" auto"/>
            <CheckBox x:Name="checkBox24"  Grid.Column="4" Grid.Row="3" Width=" auto"/>
            <CheckBox x:Name="checkBox25"  Grid.Column="4" Grid.Row="4" Width=" auto"/>
            <CheckBox x:Name="checkBox26"  Grid.Column="4" Grid.Row="5" Width=" auto"/>
            <CheckBox x:Name="checkBox27"  Grid.Column="4" Grid.Row="6" Width=" auto"/>
            <CheckBox x:Name="checkBox28"  Grid.Column="4" Grid.Row="7" Width=" auto"/>

            <CheckBox x:Name="checkBox29"  Grid.Column="5" Grid.Row="1" Width=" auto"/>
            <CheckBox x:Name="checkBox30"  Grid.Column="5" Grid.Row="2" Width=" auto"/>
            <CheckBox x:Name="checkBox31"  Grid.Column="5" Grid.Row="3" Width=" auto"/>
