<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             xmlns:BE="clr-namespace:BE;assembly=BE" x:Class="PLWPF.checkings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <CollectionViewSource x:Key="parametersViewSource" d:DesignSource="{d:DesignInstance {x:Type BE:Parameters}, CreateList=True}"/>
    </UserControl.Resources>
    
    <Grid DataContext="{StaticResource parametersViewSource}">

        <DataGrid x:Name="parametersDataGrid" RowDetailsVisibilityMode="VisibleWhenSelected" Margin="92,116,308,133.6" ItemsSource="{Binding}" EnableRowVirtualization="True" AutoGenerateColumns="False"/>

    </Grid>
</UserControl>
